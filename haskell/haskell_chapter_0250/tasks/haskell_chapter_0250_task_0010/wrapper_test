module Main where
import Test.Hspec
import Test.Hspec.Core.Runner hiding (registerFormatter)
import Test.Hspec.Api.Format.V2
import MachineFormatter (formatter)
-- ================================================
import UserCode

newtype Steam = Steam Integer deriving (Show)
instance Account Steam where
    getPlayedTime (Steam t) = t

spec :: Spec
spec = do
    describe "Класс должен" $ do
        it "иметь метод getPlayedTime" $ do
            getPlayedTime (Steam 15) `shouldBe` 15
-- ================================================
main :: IO ()
main = hspecWith (registerFormatter formatter defaultConfig) spec
